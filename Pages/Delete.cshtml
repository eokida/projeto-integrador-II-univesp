@page "{id:int}"
@model MercadinhoChapadao.Pages.Produtos.DeleteModel

<h2>Apagar Produto</h2>

<h3>Tem certeza de que deseja excluir este produto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.QuantidadeEmEstoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.QuantidadeEmEstoque)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Produto.Id" />
        <button type="submit" class="btn btn-danger">Apagar</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>