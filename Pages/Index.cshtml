@page
@model MercadinhoChapadao.Pages.Produtos.IndexModel
@{
    ViewData["Title"] = "Lista de Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Novo Produto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Produtos[0].Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Produtos[0].Descricao)</th>
            <th>@Html.DisplayNameFor(model => model.Produtos[0].Preco)</th>
            <th>@Html.DisplayNameFor(model => model.Produtos[0].QuantidadeEmEstoque)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Produtos)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
            <td>@Html.DisplayFor(modelItem => item.Preco)</td>
            <td>@Html.DisplayFor(modelItem => item.QuantidadeEmEstoque)</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
